            android:layout_height="167dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dip"
            android:id="@+id/relativeLayout">

        <ImageView
                android:id="@+id/img_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/click_bg"/>

        <com.skyfishjy.library.RippleBackground
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:id="@+id/content"
                app:rb_color="@color/white"
                app:rb_radius="5dp"
                app:rb_rippleAmount="4"
                app:rb_duration="5000"
                app:rb_scale="6"
                android:layout_centerInParent="true"/>

        <ImageView
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:layout_below="@id/content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-40dip"
                android:src="@mipmap/ic_touch_app_white_36dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上班签到"
                android:layout_below="@id/content"
                android:layout_marginTop="5dip"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:id="@+id/tv_behavior"/>
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_feedback_content"
            android:layout_below="@id/relativeLayout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="15dip"
            android:padding="15dip"
            android:layout_height="wrap_content">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"

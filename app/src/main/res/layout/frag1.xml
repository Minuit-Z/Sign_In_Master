<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        toolbar:elevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                toolbar:title=" " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_tb_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到" />

                <Button
                    android:id="@+id/btn_tb_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拜访" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="28dp"
            android:text="10:39"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_clock"
            android:layout_below="@+id/tv_clock"
            android:layout_marginEnd="16dp"
            android:text="2017-4-01" />

        <TextView
            android:id="@+id/tv_ifsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_clock"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="45dp"
            android:text="未签到" />

        <TextView
            android:id="@+id/tv_main_loctype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_clock"
            android:layout_marginBottom="73dp"
            android:text="定位方式" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/tv_main_loctype"
            android:layout_marginTop="23dp"
            android:background="#000"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_main_loctype"
            android:layout_marginBottom="20dp"
            android:text="中国北京市海淀区巨山路同台自在香山" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/layout_main_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher"></ImageView>

            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:background="#7000"
                android:paddingBottom="10dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_visit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="请输入拜访记录" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:padding="5dp"
                    android:text="提交"
                    android:textColor="#4367d4" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/mobile_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                app:counterEnabled="true"
                app:errorEnabled="true"
                toolbar:counterMaxLength="10"
                toolbar:counterOverflowTextAppearance="@style/counterOverflow">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>
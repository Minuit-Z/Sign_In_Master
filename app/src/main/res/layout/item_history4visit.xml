<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="3dp"
        >

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/backgroundColor"
                android:padding="5dp">

            <TextView
                    android:id="@+id/tv_history_day"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="10"/>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7000"/>


            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                <TextView
                        android:id="@+id/tv_item_visit_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="拉伸件地方了捏拉伸件地方了捏拉伸件地方了捏"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tv_item_visit_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="8sp"
                            android:drawableLeft="@mipmap/location_point"
                            android:gravity="center_vertical"
                            android:text="北京市海淀区自在香山"/>

                    <TextView
                            android:id="@+id/tv_item_visit_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="8sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dip"
                            android:gravity="center_vertical"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>